<form action="#" phx-submit="add">
    <%= text_input :todo, :title, placeholder: "ex: laundry, dishes, etc." %>
    <%= submit "Add", phx_disable_with: "Adding..." %>
</form>

<%= for todo <- @todos do %>
    <div>
        <%= checkbox :todo, :done, phx_click: "check_done", phx_value_id: todo.id, value: todo.done %>
        <%= todo.title %>
    </div>
<% end %>
